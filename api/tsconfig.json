{
  "compilerOptions": {
    "target": "es2021",                               
    "module": "commonjs",                               
    "baseUrl": "./src",                                  
    "paths": {
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"]
    },                                     
    "rootDirs": [
      "src",
      "test"
    ],                                   
    "outDir": "./dist",                                  
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "migrations",
    "coverage"
  ]
}
